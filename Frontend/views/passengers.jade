                                                option Other
                                        .select-wrapper.width-25
                                            select.form-control.custom-select.selectbox
                                                option Vietnam (84)
                                                option United States (1)
                                                option United Kingdom (44)
                                        .input-group.width-10
                                            input.tb-input(type="text" placeholder="")
                                        .input-group.width-40
                                            input.tb-input(type="text" placeholder="")
                                    .text-box-wrapper
                                        .select-wrapper.width-15
                                            select.form-control.custom-select.selectbox
                                                option Business
                                                option Other
                                        .select-wrapper.width-25
                                            select.form-control.custom-select.selectbox
                                                option Vietnam (84)
                                                option United States (1)
                                                option United Kingdom (44)
                                        .input-group.width-10
                                            input.tb-input(type="text" placeholder="")
                                        .input-group.width-40
                                            input.tb-input(type="text" placeholder="")
                                    .text-box-wrapper
                                        .select-wrapper.width-15
                                            select.form-control.custom-select.selectbox
                                                option Other
                                        .select-wrapper.width-25
                                            select.form-control.custom-select.selectbox
                                                option Vietnam (84)
