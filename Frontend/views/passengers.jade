                                        .input-group.width-10
                                            input.tb-input(type="text" placeholder="")
                                        .input-group.width-40
                                            input.tb-input(type="text" placeholder="")
                        .block-contact-info
                            .row
                                .col-md-12
                                    h4 Email
                                    .text-box-wrapper
                                        label.tb-label.width-20 Email Address:
                                        .input-group.width-80
                                            input.tb-input(type="email")
                                    .text-box-wrapper
                                        label.tb-label.width-20 Retype:
                                        .input-group.width-80
                                            input.tb-input(type="email")
                                    .text-box-wrapper
                                        label.tb-label.width-20 Email Address 2:
                                        .input-group.width-80
                                            input.tb-input(type="email")
