extends layout

block content
    section.page-main.padding-top.padding-bottom
        .container
            .row
                .col-md-8.main-left
                    .find-widget.widget.style-1
                        .block-name
                            .text-input
                                .text-box-wrapper.width-20
                                    label.tb-label Title<p style="color: red; display: inline-block;">*</p>
                                    .select-wrapper
                                        select.form-control.custom-select.selectbox
                                            option Mr.
                                            option Mrs.
                                            option Ms.
                                .text-box-wrapper.width-40
                                    label.tb-label Middle name & First/Given name<p style="color: red; display: inline-block;">*</p>
                                    .input-group
                                        input.tb-input(type='text', placeholder='Write your name...')
                                .text-box-wrapper.width-40
                                    label.tb-label Last/Family name
                                    .input-group
                                        input.tb-input(type='text', placeholder='Write your name...')
                        .block-travel-info
                            .text-input
                                h4.title Traveler Info
                                .box-travel-info
                                    .text-box-wrapper
                                        label.tb-label Date of Birth:
                                        .input-group
                                            input.tb-input.datetimepickerWidget(type='text', placeholder='dd/mm/YYYY')
                                    .text-box-wrapper
                                        label.tb-label Gender:
                                        .ffw-radio-selection
                                            span.ffw-radio-btn-wrapper.margin-right-40
                                                input#gender-type-1.ffw-radio-btn(type='radio', name='gender type', value='male')
                                                label.ffw-radio-label(for='gender-type-1') Male
                                            span.ffw-radio-btn-wrapper
                                                input#gender-type-2.ffw-radio-btn(type='radio', name='gender type', value='female')
                                                label.ffw-radio-label(for='gender-type-2') Female
                        .block-number
                            .text-input
                                .text-box-wrapper
                                    label.tb-label Frequently Flyer Number:
                                    .select-wrapper
                                        select.form-control.custom-select.selectbox
                                            option Vietnam Airlines
                                            option AEROFLOT
                                            option Air France
                                            option Korean Air
                                    .input-group
                                        input.tb-input(type='text', placeholder='')
                        .block-document-info
                            h4.title Traveler Document Information:
                            .box-document-info
                                .row
                                    .col-md-6
                                        .text-box-wrapper
                                            label.tb-label Document Type:
                                            .select-wrapper
                                                select.form-control.custom-select.selectbox
                                                    option Passport
                                                    option Identity Card
                                        .text-box-wrapper
                                            label.tb-label Number:
                                            .input-group
                                                input.tb-input(type="text", placeholder='')
                                        .text-box-wrapper
                                            label.tb-label Issuing Country:
                                            .select-wrapper
                                                select.form-control.custom-select.selectbox
                                                    option United States
                                                    option United Kingdom
                                                    option China
                                                    option Vietnam
                                    .col-md-6
                                        .text-box-wrapper
                                            label.tb-label Exp. Date:
                                            .input-group
                                                input.tb-input.datetimepickerWidget(type='text', placeholder='dd/mm/YYYY')
                                        .text-box-wrapper
                                            label.tb-label Nationality:
                                            .select-wrapper
                                                select.form-control.custom-select.selectbox
                                                    option United States
                                                    option United Kingdom
                                                    option China
                                                    option Vietnam
                        .block-contact-info
                            .row
                                .col-md-12
                                    h4 Phone
                                    .text-box-wrapper
                                        .select-wrapper.width-15
                                            select.form-control.custom-select.selectbox
                                                option Mobile
                                                option Home
                                                option Business
                                                option Other
                                        .select-wrapper.width-25
                                            select.form-control.custom-select.selectbox
                                                option Vietnam (84)
                                                option United States (1)
                                                option United Kingdom (44)
                                        .input-group.width-10
                                            input.tb-input(type="text" placeholder="")
                                        .input-group.width-40
                                            input.tb-input(type="text" placeholder="")
                                    .text-box-wrapper
                                        .select-wrapper.width-15
                                            select.form-control.custom-select.selectbox
                                                option Home
